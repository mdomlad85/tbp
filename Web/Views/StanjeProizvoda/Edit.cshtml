@model Web.Models.StanjeProizvoda

@{
    ViewData["Title"] = "Edit";
}

<h2>Ure&#273;ivanje</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Stanje Proizvoda</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="MaksimalnaKolicina" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MaksimalnaKolicina" class="form-control" />
                <span asp-validation-for="MaksimalnaKolicina" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MinimalnaKolicina" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MinimalnaKolicina" class="form-control" />
                <span asp-validation-for="MinimalnaKolicina" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Stanje" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Stanje" class="form-control" />
                <span asp-validation-for="Stanje" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="JedinicaMjereId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="JedinicaMjereId" class="form-control" asp-items="ViewBag.JedinicaMjereId"></select>
                <span asp-validation-for="JedinicaMjereId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ProizvodId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ProizvodId" class="form-control" asp-items="ViewBag.ProizvodId"></select>
                <span asp-validation-for="ProizvodId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Povratak na popis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
