@model Web.Models.Dokument

@{
    ViewData["Title"] = "Uredi";
}

<h2>Ure&#273;ivanje</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Dokument</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="DatumKreiranja" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DatumKreiranja" class="form-control" />
                <span asp-validation-for="DatumKreiranja" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DatumAzuriranja" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DatumAzuriranja" class="form-control" />
                <span asp-validation-for="DatumAzuriranja" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ZaposlenikId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="ZaposlenikId" class="form-control" asp-items="ViewBag.ZaposlenikId"></select>
                <span asp-validation-for="ZaposlenikId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StatusId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId"></select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="VrstaId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="VrstaId" class="form-control" asp-items="ViewBag.VrstaId"></select>
                <span asp-validation-for="VrstaId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Godina" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Godina" class="form-control" />
                <span asp-validation-for="Godina" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Povratak na popis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
