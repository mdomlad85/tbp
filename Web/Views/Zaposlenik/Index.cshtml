@model IEnumerable<Web.Models.Zaposlenik>

@{
    ViewData["Title"] = "Zaposlenik";
}

<h2>Zaposlenik</h2>

<p>
    <a asp-action="Create">Napravi</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Prezime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Ime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DatumRodjenja)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Kontakt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prezime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumRodjenja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kontakt.Naziv)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Vi&#353;e...</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
