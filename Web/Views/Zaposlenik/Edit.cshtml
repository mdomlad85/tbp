@model Web.Models.Zaposlenik

@{
    ViewData["Title"] = "Uredi";
}

<h2>Ure&#273;ivanje</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Zaposlenik</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Prezime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Prezime" class="form-control" />
                <span asp-validation-for="Prezime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Ime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DatumRodjenja" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DatumRodjenja" class="form-control" />
                <span asp-validation-for="DatumRodjenja" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="KontaktId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="KontaktId" class="form-control" asp-items="ViewBag.KontaktId"></select>
                <span asp-validation-for="KontaktId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Povratak na popis</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
