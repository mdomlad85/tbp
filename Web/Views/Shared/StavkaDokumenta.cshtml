@model Web.Models.StavkaDokumenta

<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Stavka Dokumenta</h4>
        </div>
        <div class="modal-body">
            <form asp-action="DodajStavku">
                <input type="hidden" asp-for="DokumentId" />
                <div class="form-horizontal">
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Proizvod" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="ProizvodId" class="form-control" asp-items="ViewBag.Proizvodi"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Kolicina" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Kolicina" class="form-control" />
                            <span asp-validation-for="Kolicina" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Dodaj" class="btn btn-default" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                        </div>
                    </div>
                </div>
            </form>

            <div>
                <a asp-action="Index">Povratak na popis</a>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
